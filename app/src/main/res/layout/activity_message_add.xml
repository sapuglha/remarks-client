<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.remarks.activities.MessageAddActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_add_activity_text_label" />

    <EditText
        android:id="@+id/message_add_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/message_add_activity_edit_text_hint"
        android:inputType="textMultiLine"
        android:lines="2"
        android:maxLines="5" />

    <Button
        android:id="@+id/message_add_button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_add_activity_button_label_send" />

</LinearLayout>
